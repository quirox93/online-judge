---
import { ViewTransitions } from "astro:transitions";
import "@/styles/globals.css";
import LoginStatus from "@/components/LoginStatus.astro";

interface Props {
  title: string;
  slug: string;
}

const { title, slug } = Astro.props as Props;
---

<!doctype html>
<html class="dark max-w-3xl m-auto" lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <nav
      class="relative select-none bg-muted flex items-stretch w-full mb-10 border-2 border-slate-600 border-t-0"
    >
      <div class="flex flex-no-shrink items-stretch h-12">
        <a
          href="/"
          class:list={[
            "flex-no-grow flex-no-shrink relative py-2 px-4 leading-normal text-foreground no-underline flex items-center hover:bg-background",
            { "bg-background": slug === "home" },
          ]}>Home</a
        >
        <a
          href="/rulings"
          class:list={[
            "flex-no-grow flex-no-shrink relative py-2 px-4 leading-normal text-foreground no-underline flex items-center hover:bg-background",
            { "bg-background": slug === "rulings" },
          ]}>Rulings</a
        >
        <a
          href="/about"
          class:list={[
            "flex-no-grow flex-no-shrink relative py-2 px-4 leading-normal text-foreground no-underline flex items-center hover:bg-background",
            { "bg-background": slug === "about" },
          ]}>About</a
        >
      </div>

      <div class="flex items-stretch flex-no-shrink flex-grow">
        <div class="flex items-stretch justify-end ml-auto">
          <LoginStatus />
        </div>
      </div>
    </nav>
    <slot />
    <style is:global></style>

    <style is:global>
      body {
        --sb-track-color: #232e33;
        --sb-thumb-color: #6baf8d;
        --sb-size: 10px;
        overflow-y: scroll;
        background: red;
        scrollbar-color: var(--sb-thumb-color) var(--sb-track-color);
        scrollbar-width: none;
      }

      body::-webkit-scrollbar {
        width: var(--sb-size);
      }

      body::-webkit-scrollbar-track {
        background: transparent;
        border-radius: 10px;
      }

      body::-webkit-scrollbar-thumb {
        background: var(--sb-thumb-color);
        border-radius: 10px;
      }
    </style>
  </body>
</html>
